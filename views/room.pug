extends layout

block content
  h1= title
  

  - var results = results
  div(class = 'container-fluid')
    div(class = 'row m-1')
     each item,index in results 
      - let destination = `dispatch(\"/rooms/update?id=${item._id}\")`
      - let detail = `dispatch(\"/rooms/update?id=${item._id}\")`
      - let d = `dispatch(\"/rooms/update?id=${item._id}\")`
      div(class="row-sm-2", class="m-1") Item #{item.roomName}(#{item.roomNumber}) is #{item.roomShape}
       button.btn( class="btn-primary ml-1", onclick= destination) Update
       button.btn( class="btn-primary ml-1", onclick= detail) Detail
       button.btn( class="btn-primary ml-1", onclick= d) Delete

  script.
   function dispatch(path){
    window.location.href=path
   }

