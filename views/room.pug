extends layout

block content
  h1= title
  - var results = results
    div(class = 'container-fluid')
      div(class = 'row')
        each item,index in results 
          div(class="col-sm-2", onClick=`buy(${index})`)  roomName : #{item["roomName"]} <br> roomNumber : #{item["roomNumber"]} <br> roomShape: #{item["roomShape"]}
          script.
            function buy(val) {
              alert(`You purchased item ${val}`)
            }